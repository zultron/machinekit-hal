# Basic paths
#
# Variables used below
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
libexecdir=@libexecdir@
sysconfdir=@sysconfdir@

# Makefile.inc paths
HAL_HOME=@HAL_HOME@
RTLIB_DIR=@HAL_RTLIB_DIR@
MODULES_DIR=@HAL_MODULES_DIR@
SYSTEM_CONFIG_DIR=@HAL_SYSTEM_CONFIG_DIR@
LIBEXEC_DIR=@HAL_LIBEXEC_DIR@
BIN_DIR=@HAL_BIN_DIR@


#################################################
# Global section
#
# Generate the [global] section of the config

cat <<EOF
# ${SYSTEM_CONFIG_DIR}/rtapi.ini
#
# Machinekit RTAPI system configuration
#
# Most values here will never need to be changed.  Power users may
# want to change DEBUG.

[global]
# Default DEBUG level, 0-5 for NONE, ERR, WARN, INFO, DBG, ALL
DEBUG=1

# fixme make param
HAL_SIZE=524288

# Executables
rtapi_msgd=${LIBEXEC_DIR}/rtapi_msgd
# rtapi_app should be defined in the appropriate flavor section below

# directory paths
HAL_HOME=${HAL_HOME}
RTLIB_DIR=${RTLIB_DIR}
MODULES_DIR=${MODULES_DIR}
LIBEXEC_DIR=${LIBEXEC_DIR}
BIN_DIR=${BIN_DIR}

# build parameters
USE_PORTABLE_PARPORT_IO=@USE_PORTABLE_PARPORT_IO@
GIT_VERSION=@GIT_VERSION@
RUN_IN_PLACE=@RUN_IN_PLACE@
PIDOF=@PIDOF@

EOF
