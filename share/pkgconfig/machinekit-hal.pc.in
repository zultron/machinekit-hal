Name: machinekit-hal
Description: Machinekit HAL
Requires:
Version: @HALVERSION@

# Paths
prefix=@prefix@
exec_prefix=@prefix@
includedir=@HAL_INCLUDE_DIR@
modulesdir=@HAL_MODULES_DIR@
bindir=@HAL_BIN_DIR@

# CFLAGS
Cflags: -I@HAL_INCLUDE_DIR@

# Library flags
Libs: @HAL_LDFLAGS@
hal_lib_dir=@HAL_LIB_DIR@
lib_ulapi=-lhalulapi
lib_hal=-lhal
lib_halcmd=-lhalcmd
lib_rtapi_math=-lrtapi_math

# Other build variables
modext=.so
realtime=@REALTIME@

CC=@CC@
OBJCOPY=@OBJCOPY@
LD=@LD@
